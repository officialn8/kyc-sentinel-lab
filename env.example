#############################################
# KYC Sentinel Lab - Example Environment File
#
# Copy to `.env` for local dev, or set these
# as environment variables in Vercel/Railway.
#############################################

############################
# Backend (FastAPI / Railway)
############################

# Database (Railway Postgres)
# Railway typically provides this as DATABASE_URL.
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/kyc_sentinel

# CORS: allow your Vercel origin(s).
# Supported formats:
# - JSON array: ["https://your-app.vercel.app","https://your-custom-domain.com"]
# - Comma-separated: https://your-app.vercel.app,https://your-custom-domain.com
CORS_ORIGINS=http://localhost:3000

# Storage (Cloudflare R2) - S3 compatible
R2_ENDPOINT=https://<accountid>.r2.cloudflarestorage.com
R2_ACCESS_KEY=REPLACE_ME
R2_SECRET_KEY=REPLACE_ME
R2_BUCKET=kyc-sentinel-media

# Processing backend
# Enable Modal for production processing.
USE_MODAL=false
MODAL_ENVIRONMENT=dev

# Presigned URL expiration (seconds)
PRESIGNED_URL_EXPIRATION=3600

# Minimal protection when running publicly:
# - Option A: API key (header-based, NOT a true secret if used from browsers)
BACKEND_API_KEY=
# - Option B: Basic Auth (recommended for demos; browsers will prompt)
BASIC_AUTH_USERNAME=
BASIC_AUTH_PASSWORD=

######################
# Frontend (Next/Vercel)
######################

# Public API base URL (Railway backend URL)
NEXT_PUBLIC_API_URL=http://localhost:8000

# Server-only backend base URL used by the Next.js API proxy.
# Set this in Vercel (do NOT prefix with NEXT_PUBLIC).
BACKEND_API_URL=http://localhost:8000

# Server-only API key used by the Next.js API proxy to call the backend.
# Set this in Vercel (do NOT prefix with NEXT_PUBLIC).
BACKEND_API_KEY=

# Optional: if you serve R2 assets via a custom domain, set hostname here so
# Next Image can render them safely (e.g. media.yourdomain.com).
NEXT_PUBLIC_R2_PUBLIC_HOSTNAME=

#####################
# Modal (Secrets setup)
#####################

# In Modal, create a secret named `r2-credentials` with:
# R2_ENDPOINT, R2_ACCESS_KEY, R2_SECRET_KEY, R2_BUCKET


